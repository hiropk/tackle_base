<section id="line">
  <h2>ライン</h2>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
      <%= link_to "New line", new_line_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>

    <div class="relative w-full mb-2">
      <table class="text-lg text-left rtl:text-right text-gray-500 dark:text-gray-400 w-full">
        <thead class="text-lg text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr class="bg-gray-200 text-gray-700">
            <th scope="col" class="px-6 py-3 pl-1 pr-1">名前</th>
            <th scope="col" class="px-6 py-3 pl-1 pr-1">ブランド</th>
            <th scope="col" class="px-6 py-3 pl-1 pr-1">アクション</th>
          </tr>
        </thead>
        <tbody>
          <% if lines.any? %>
            <% lines.each do |line| %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1 break-words whitespace-normal max-w-xs"><%= line.name %></td>
                <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1 break-words whitespace-normal max-w-xs" ><%= line.brand %></td>
                <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1 break-words whitespace-normal max-w-xs">
                  <div class="flex">
                    <%= link_to "詳細", line, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 inline-block font-medium" %>
                    <%= link_to "編集", edit_line_path(line), class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 inline-block font-medium" %>
                    <%= button_to "削除", line, method: :delete, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-blue-100 inline-block font-medium", data: { turbo_confirm: "削除削除してもよろしいですか?" } %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3" class="text-center text-gray-500 py-4 border-t border-gray-300">No rods found.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
