<%= form_with(model: log, class: "contents") do |form| %>
  <% if log.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(log.errors.count, "error") %> prohibited this log from being saved:</h2>

      <ul class="list-disc ml-6">
        <% log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :fishing_date %>
    <%= form.date_field :fishing_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:fishing_date].none?, "border-red-400 focus:outline-red-600": log.errors[:fishing_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:start_time].none?, "border-red-400 focus:outline-red-600": log.errors[:start_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:end_time].none?, "border-red-400 focus:outline-red-600": log.errors[:end_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :area %>
    <%= form.text_field :area, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:area].none?, "border-red-400 focus:outline-red-600": log.errors[:area].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :fishing_guide_boat %>
    <%= form.text_field :fishing_guide_boat, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:fishing_guide_boat].none?, "border-red-400 focus:outline-red-600": log.errors[:fishing_guide_boat].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :menu %>
    <%= form.text_field :menu, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:menu].none?, "border-red-400 focus:outline-red-600": log.errors[:menu].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:notes].none?, "border-red-400 focus:outline-red-600": log.errors[:notes].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :other %>
    <%= form.textarea :other, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": log.errors[:other].none?, "border-red-400 focus:outline-red-600": log.errors[:other].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit '作成', class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
