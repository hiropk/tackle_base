<div class="mb-4 mx-auto md:w-2/3 w-full">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <h1 class="font-bold text-3xl">パスワードをお忘れですか?</h1>

  <%= form_with url: passwords_path, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "現在のメールアドレスを入力してください", value: params[:email_address], class: "block shadow-sm rounded-md border border-gray-400 focus:outline-solid focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="flex justify-center">
      <%= form.submit "送信", class: "w-auto sm:w-auto text-center rounded-lg px-3.5 py-2.5 bg-blue-400 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-sm text-gray-500 sm:mt-0">
    <%= link_to "ログイン画面へ", new_session_path, class: "text-gray-700 underline hover:no-underline" %>
  </div>
</div>
