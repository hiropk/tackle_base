<% content_for :title, "Editing profile" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">編集</h1>
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% elsif !@current_user.activated? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= "アカウントの有効化 によりアカウントの有効化を行なってください。" %></p>
  <% end %>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render "form", profile: @profile %>

  <%= link_to "戻る", user_profile_path(@profile.user_id), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
