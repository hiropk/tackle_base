<section id="profile">
  <div class="md:w-2/3 w-full">
    <% if alert = flash[:alert] %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
    <% elsif %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= "アカウントの有効化 によりアカウントの有効化を行なってください。" %></p>
    <% end %>

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h2 class="font-bold text-4xl mb-4">プロフィール</h2>
    <div class="flex text-right">
      <%= link_to "メールアドレス変更", '#', class: "ml-4 px-4 py-2 rounded-lg bg-white text-gray-800 border border-gray-300 hover:bg-gray-100 shadow-sm transition" %>
      <%= button_to "パスワードの変更", passwords_path(params: {email_address: @current_user.email_address}), method: :post, class: "ml-4 px-4 py-2 rounded-lg bg-white text-gray-800 border border-gray-300 hover:bg-gray-100 shadow-sm transition" %>
      <%= button_to "アカウントの有効化", '#', method: :post, class: "ml-4 px-4 py-2 rounded-lg bg-white text-gray-800 border border-gray-300 hover:bg-gray-100 shadow-sm transition" %>
    </div>

    <%= render @profile %>

    <%= link_to "編集", edit_user_profile_path, class: "w-full mb-2 sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "戻る", root_path, class: "w-full mb-3 sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </div>
</section>
