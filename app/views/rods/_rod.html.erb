<div id="<%= dom_id rod %>" class="w-full sm:w-auto my-5 space-y-5">
  <table class="text-lg text-left rtl:text-right text-gray-500 dark:text-gray-400 w-full">
    <thead class="text-lg text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr class="bg-gray-200 text-gray-700">
        <th scope="col" class="px-6 py-3">項目</th><th scope="col" class="px-6 py-3">内容</th>
      </tr>
    </thead>
    <tbody>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">名前</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= rod.name %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">ブランド</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= rod.brand %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">長さ<br>(単位:ft)</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= rod.length %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">釣法</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= t("activerecord.attributes.rod.fishing_type_values.#{rod.fishing_type}") %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">硬さ</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= t("activerecord.attributes.rod.power_values.#{rod.power}") %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">リール<br>タイプ</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= t("activerecord.attributes.rod.reel_type_values.#{rod.reel_type}") %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">最小ルアー<br>ウェイト<br>(単位:g)</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= rod.min_weight %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">最大ルアー<br>ウェイト<br>(単位:g)</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= rod.max_weight%></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">購入日</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= l(rod.purchase_date) %></td>
      </tr>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white break-words whitespace-normal max-w-xs">メモ</th>
        <td class="px-6 py-4 break-words whitespace-normal max-w-xs"><%= rod.notes %></td>
      </tr>
    </tbody>
  </table>
</div>
