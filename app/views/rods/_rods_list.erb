<div class="w-full max-w-5xl mx-auto space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 text-green-700 font-semibold rounded-md text-center" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg p-1">
    <%= search_form_for search, class: "grid grid-cols-1 sm:grid-cols-3 gap-4" do |f| %>
      <div>
        <%= f.label :name_cont, "名前", class: "text-sm font-medium text-gray-700" %>
        <%= f.search_field :name_cont, class: "mt-1 w-4/5 p-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>
      <div>
        <%= f.label :brand_eq, "ブランド", class: "text-sm font-medium text-gray-700" %>
        <%= f.search_field :brand_eq, class: "mt-1 w-4/5 p-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>
      <div class="flex flex-row sm:flex-row items-center justify-center space-y-2 sm:space-y-0 sm:space-x-2">
        <%= f.submit "検索", class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md shadow sm:w-auto text-center text-base h-10" %>
      </div>


    <% end %>
  </div>

  <div class="relative w-full">
    <div class="text-right"><%= link_to "新規作成", new_rod_path, class: "font-bold text-teal-500 w-4/5" %></div>
    <div class="text-right"><%= link_to "検索クリア", rods_path, class: "font-bold text-blue-500 w-4/5" %></div>
    <table class="text-lg text-left rtl:text-right text-gray-500 dark:text-gray-400 w-full">
      <thead class="text-lg text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr class="bg-gray-200 text-gray-700">
          <th scope="col" class="px-6 py-3 pl-1 pr-1">名前</th>
          <th scope="col" class="px-6 py-3 pl-1 pr-1">ブランド</th>
          <th scope="col" class="px-6 py-3 pl-1 pr-1">アクション</th>
        </tr>
      </thead>
      <tbody>
        <% if rods.any? %>
          <% rods.each do |rod| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1"><%= rod.name %></td>
              <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1" ><%= rod.brand %></td>
              <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1">
                <div class="flex">
                  <%= link_to "詳細", rod, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 inline-block font-medium" %>
                  <%= link_to "編集", edit_rod_path(rod), class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 inline-block font-medium" %>
                  <%= button_to "削除", rod, method: :delete, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-blue-100 inline-block font-medium", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="text-center text-gray-500 py-4 border-t border-gray-300">No rods found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate rods, class: "mt-6" %>
</div>
