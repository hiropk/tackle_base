<div class="w-full max-w-5xl mx-auto space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 text-green-700 font-semibold rounded-md text-center" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
    <%= link_to "New Rod", new_rod_path, class: "rounded-lg px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium shadow-md w-full sm:w-auto text-center" %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= search_form_for search, class: "grid grid-cols-1 sm:grid-cols-3 gap-4" do |f| %>
      <div>
        <%= f.label :name_cont, "名前", class: "block text-sm font-medium text-gray-700" %>
        <%= f.search_field :name_cont, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>
      <div>
        <%= f.label :brand_eq, "ブランド名", class: "block text-sm font-medium text-gray-700" %>
        <%= f.search_field :brand_eq, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm" %>
      </div>
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2 items-end">
        <%= f.submit "検索", class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md shadow w-full sm:w-auto" %>
        <%= link_to "クリア", rods_path, class: "px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-md shadow w-full sm:w-auto text-center" %>
      </div>
    <% end %>
  </div>

  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="min-w-full table-auto border-collapse">
      <thead>
        <tr class="bg-gray-200 text-gray-700">
          <th  scope="row" class="px-4 py-2 border border-gray-300">名前</th>
          <th  scope="row" class="px-4 py-2 border border-gray-300">ブランド</th>
          <th  scope="row" class="px-4 py-2 border border-gray-300">アクション</th>
        </tr>
      </thead>
      <tbody>
        <% if rods.any? %>
          <% rods.each do |rod| %>
            <tr class="border-t border-gray-300">
              <td class="px-4 py-3 border border-gray-300"><%= rod.name %></td>
              <td class="px-4 py-3 border border-gray-300"><%= rod.brand %></td>
              <td class="px-4 py-3 flex sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2 justify-center border border-gray-300">
                <div style="text-align: center;">
                  <%= link_to "詳細", rod, class: "inline-block px-6 py-3 text-white bg-blue-600 hover:bg-blue-500 rounded-lg shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-300" %>
                  <%= link_to "編集", edit_rod_path(rod), class: "inline-block px-6 py-3 text-white bg-blue-600 hover:bg-blue-500 rounded-lg shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-300" %>
                  <%= button_to "削除", rod, method: :delete, class: "inline-block px-6 py-3 text-white bg-red-600 hover:bg-blue-500 rounded-lg shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-300", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="text-center text-gray-500 py-4 border-t border-gray-300">No rods found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= paginate rods, class: "mt-6" %>
</div>
