<div class="simple-calendar">
  <div class="calendar-heading">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title"><%= start_date.year %>年<%= t('date.month_names')[start_date.month] %></time>

    <nav class="mb-1">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 hover:bg-gray-300 inline-block font-medium" %>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 hover:bg-gray-300 inline-block font-medium" %>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 hover:bg-gray-300 inline-block font-medium" %>
    </nav>
  </div>

  <table class="mb-5 table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
              <% unless Log.on_fishing_date(day, @current_user).empty? %>
                <br>
                <% year, month, date = day.to_s.split("-").map(&:to_i)[0..2] %>
                <%= link_to '⚫︎', logs_path(params: { q: {"fishing_year_eq"=>year, "fishing_month_eq"=>month, "fishing_day_eq"=>date, "area_cont"=>"", "fishing_guide_boat_cont"=>"", "menu_eq"=>""} }), class: "text-green-500 hover:text-green-700" %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
