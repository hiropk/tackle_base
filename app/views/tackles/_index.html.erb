<section id="tackle">
  <div class="flex">
    <h2>タックル</h2>
    <svg class="ml-1 mt-3 hover:bg-gray-200 hover:rounded-md" id="toggle_tackle_add_icon" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/></svg>
    <svg class="ml-1 mt-3 hover:bg-gray-200 hover:rounded-md hidden" id="toggle_tackle_remove_icon" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M200-440v-80h560v80H200Z"/></svg>
  </div>
  <section class="hidden" id="toggle_tackle">
    <div class="w-full">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
      <% end %>

      <div class="text-right mb-0">
        <%= link_to "新規作成", new_tackle_path, class: "px-4 py-2 rounded-lg bg-white text-gray-800 border border-gray-300 hover:bg-gray-100 shadow-sm transition" %>
      </div>

      <button id="toggle_search_tackles_form" class="flex items-center px-4 py-2 mb-1 hover:bg-gray-200 rounded-md text-gray-800">
        <span class="material-symbols-outlined mr-2">search</span>
        フィルタ
      </button>

      <div id="search_tackles_form" class="bg-white rounded-lg p-4 w-full hidden">
        <div class="text-right">
          <%= link_to "クリア", root_path, class: "text-blue-600 items-center px-4 py-2 hover:bg-gray-200 rounded-md text-gray-800" %>
        </div>

        <%= search_form_for search_tackles, class: "grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4" do |f| %>
          <div class="flex flex-col"><%= f.label :name_cont, "名前：", class: "text-sm font-medium text-gray-700 whitespace-nowrap" %></div>
          <div><%= f.search_field :name_cont, class: "mt-1 w-full p-2 border border-gray-300 rounded-md shadow-sm" %></div>

          <div id="tackles_search_button" class="flex items-end">
            <%= f.submit "検索", class: "w-full sm:w-auto px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md shadow text-base h-10" %>
          </div>
        <% end %>
      </div>

      <div class="relative w-full mb-2">
        <table class="text-lg text-left rtl:text-right text-gray-500 dark:text-gray-400 w-full">
          <thead class="text-lg text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr class="bg-blue-500 text-white">
              <th scope="col" class="font-normal px-6 py-3 pl-1 pr-1">名前</th>
              <th scope="col" class="font-normal px-6 py-3 pl-1 pr-1">アクション</th>
            </tr>
          </thead>
          <tbody>
            <% if tackles.any? %>
              <% tackles.each do |tackle| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                  <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1 break-words whitespace-normal max-w-xs"><%= tackle.name %></td>
                  <td class="px-6 py-4 pl-1 pt-1 pb-1 pr-1 break-words whitespace-normal max-w-xs">
                    <div class="flex">
                      <%= link_to "詳細", tackle, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 inline-block font-medium" %>
                      <%= link_to "編集", edit_tackle_path(tackle), class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-gray-100 inline-block font-medium" %>
                      <%= button_to "削除", tackle, method: :delete, class: "rounded-lg py-3 px-5 pl-1 pt-1 pb-1 pr-1 mr-1 bg-blue-100 inline-block font-medium", data: { turbo_confirm: "削除削除してもよろしいですか?" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3" class="text-center text-gray-500 py-4 border-t border-gray-300">No rods found.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-center mt-0"><%= paginate tackles, class: "mt-0" %></div>
    </div>
  </section>
</section>
