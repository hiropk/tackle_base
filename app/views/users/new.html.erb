<section id="create_acount">
  <h2>新規アカウント作成</h2>
  <%= form_with(model: @user, class: "contents") do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(@user.errors.count, "件のエラー：") %></h2>

        <ul class="list-disc ml-6">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :email_address %>
      <%= form.email_field :email_address, placeholder: "user_email@example.jp", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @user.errors[:email_address].none?, "border-red-400 focus:outline-red-600": @user.errors[:email_address].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :password %>
      <%= form.text_field :password, placeholder: "アルファベット大文字と数字を含む8文字以上で設定してください。", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @user.errors[:password].none?, "border-red-400 focus:outline-red-600": @user.errors[:password].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :password_confirmation %>
      <%= form.text_field :password_confirmation, placeholder: "アルファベット大文字と数字を含む8文字以上で設定してください。", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @user.errors[:password_confirmation].none?, "border-red-400 focus:outline-red-600": @user.errors[:password_confirmation].any?}] %>
    </div>

    <div class="mb-4 col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="flex justify-center">
        <%= form.submit "アカウント作成", class: "w-auto sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>

      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        <%= link_to "すでにアカウントをお持ちですか?", new_session_path, class: "text-gray-700 underline hover:no-underline" %>
      </div>
      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        <%= link_to "ログイン画面へ", new_session_path, class: "text-gray-700 underline hover:no-underline" %>
      </div>
    </div>
  <% end %>
</section>
